@model IEnumerable<OSMH.Models.Blog>
<div class="col-md-8">
    @foreach (var item in Model)
    {
        <div>
            <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
            @Html.ActionLink(item.PublishDate.ToShortDateString(), "Archive", new { id = item.PublishDate.ToShortDateString() }, new { @class = "btn btn-warning" })
            <p>@item.Content.Substring(0, Math.Min(item.Content.Length, 100))...</p>
            @Html.ActionLink("Read More", "Details", new { id = item.Id })
        </div>
    }
</div>
