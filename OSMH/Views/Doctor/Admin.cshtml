@{
    ViewBag.Title = "Admin";
}


@{
    ViewBag.Title = "Dashboard";
}

<h2>Doctor @Session["name"], Welcome to Dashboard</h2>
@Html.ActionLink("Create Schedule", "CreateSchedule")

<div id="dashboard">
    <div>
        <button class="btn btn-primary" v-on:click="changeView('appointments')">Appointments</button>
        <button class="btn btn-primary pull-right" v-on:click="changeView('schedules')">Manage Schedules</button>
    </div>
    <table class="table" v-if="view == 'appointments'">
        <tr>
            <td>Date</td>
            <td>Time</td>
            <td>Name</td>
        </tr>
        <tr v-for="a in appointments">
            <td>{{a.Date}}</td>
            <td>{{a.Time}}</td>
            <td>{{a.Patient}}</td>
        </tr>
    </table>
    <div class="" v-if="view == 'schedules'">
        <div>
            <span class="label label-success">Available</span>
            <span class="label label-danger">Booked</span>
        </div>
        <div class="row" v-for="(timeslots, date) in schedules">
            <h3>{{date}}</h3>
            <div class="col-xs-2 timeslot" v-for="t in timeslots">
                <button v-bind:class="t.Booked ? 'btn btn-danger' : 'btn btn-success'">{{t.Time}}</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/helper/datetime.js"></script>
<script src="~/Scripts/doctor/dashboard.js"></script>