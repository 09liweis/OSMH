<link rel="stylesheet" href="~/Content/email/admin.css" />

@model IEnumerable<OSMH.Models.EmailPost>

@{
    ViewBag.Title = "Email Subscribe Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin Email Subscribers</h2>

<p>
    @Html.ActionLink("Admin Dashboard", "Index", "Admin")
</p>

<p>
    @Html.ActionLink("Send new email", "Create") 
</p>

<p>
    @Html.ActionLink("Subscribe List", "subscribe")
</p>

<h4>Past Emails</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
