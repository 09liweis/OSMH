@model OSMH.Models.PatientDashboard

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#makeAppointment">
    Make an appointment
</button>

<div class="modal fade" id="makeAppointment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
                <select id="selectDoctor">
                    <option>Select a doctor</option>
                    @foreach (var d in Model.doctors)
                    {
                        <option value="@d.Id">@d.User.FirstName @d.User.LastName</option>
                    }
                </select>
                <div id="selectDate">

                </div>
                <div id="selectTime"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="bookAppointment">Save changes</button>
            </div>
        </div>
    </div>
</div>
