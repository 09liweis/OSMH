@model OSMH.Models.Homepage

@{
    ViewBag.Title = "Home";
}

    <!-- Page Content -->
        <!-- Jumbotron Header -->
        <section class="jumbotron">
            <h3 id="banner-text">Quick Resources</h3>
            <div class="row">
                
                <p>@Html.ActionLink("Log-In", "Login", "Account", null, new { @class = "btn btn-primary btn-large" })&nbsp; @Html.ActionLink("Book An Appointment", "Login", "Account", null, new { @class = "btn btn-primary btn-large" })</p>
                <p>@Html.ActionLink("Suggestion", "Index", "PatientSuggestion", null, new { @class = "btn btn-primary btn-large" })&nbsp;@Html.ActionLink("Online Payment", "Index", "Payments",null, new { @class = "btn btn-primary btn-large" })</p>
            </div>
        </section>
        <hr>
        <!-- Title -->
        <div id="features">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-center text-uppercase"><strong>Major Services</strong></h3>
                </div>
            </div>
            <!-- /.row -->
            <!-- Page Features -->
            <div class="row text-center">
                <div class="col-md-3 col-sm-6 hero-feature">
                    <div>
                        <img src="~/Content/images/icon2.png" width="150" height="150" alt="">
                        <div class="caption">
                            <h3>Critical Care</h3>
                            <p>OSMH's Critical Care program provides specialized care, as well as life and organ support systems, for patients who are critically ill and require comprehensive care and monitoring.</p>
                            <p>
                                <a href="#" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 hero-feature">
                    <div>
                        <img src="~/Content/images/icon1.png" width="150" height="150" alt="">
                        <div class="caption">
                            <h3>Long Term Care</h3>
                            <p>Our Long term Care is focused on individualized and coordinated services that promote independence, maximize patients’ quality of life, and meet patients’ needs over a period of time</p>
                            <p>
                                 <a href="#" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 hero-feature">
                    <div>
                        <img src="~/Content/images/icon3.png" width="150" height="150" alt="">
                        <div class="caption">
                            <h3>Maternal Care</h3>
                            <p>We are dedicated to providing new mothers and their families with outstanding and responsive care. </p>
                            <p>
                                <a href="#" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 hero-feature">
                    <div>
                        <img src="../Content/images/icon4.png" width="150" height="150" alt="">
                        <div class="caption">
                            <h3>Mental Health</h3>
                            <p>Our services are focused on wellness, recovery and prevention, which facilitates the movement of our clients from one program to another.</p>
                            <p>
                                <a href="#" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <hr>

        <!-- Sub Content -->
        <div id="sub" class="row">
            <div class="col-md-4 col-sm-12">
                <h3>Latest News and Blog</h3>
                <h4>@Html.ActionLink(@Model.blog.Title, "Details", "Blogs", new { id = Model.blog.Id }, null)</h4>
                <p>@Html.Raw(Model.blog.Content.Substring(0, Math.Min(Model.blog.Content.Length, 300)))...</p>
                @Html.ActionLink("View All Blogs", "Index", "Blogs")
            </div>
            <div class="col-md-4 col-sm-6">
                <h3>F.A.Q.</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                <p><a href="#">Read More</a></p>
            </div>
            <div class="col-md-4 col-sm-6">
                <h3>Testimonials</h3>
                <h4>@Model.testimonial.Title</h4>
                <p>@Model.testimonial.Message</p>
                @Html.ActionLink("View More", "Index", "Testimonials")
            </div>
        </div>
    

